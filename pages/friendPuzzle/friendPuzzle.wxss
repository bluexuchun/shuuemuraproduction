page{
  background: #000;
  
}
.chu{
  float: right;
  color: #D9A957;
  font-size: 18rpx;
  padding: 25rpx 25rpx 15rpx;
  text-align: right;
}
/* .puzzleText{
  padding: 10rpx 0 0 0;
} */
.puzzleText image{
  width: 100%;
  display: block;
  margin: 0 auto;
}
.puzzle{
  box-sizing:border-box;

  width: 690rpx;
  margin: 0 auto;
}
.clearfix:after,
.clearfix:before{
  display: table;
  content: " ";
  height: 0;
  visibility: hidden;
}
.clearfix:after{
  clear: both;
}
.cardList{
  width: 33%;
  border-right: 1px solid #fff;
  border-bottom: 1px solid #fff;
  float: left;
  position: relative;
}
.cardList image{
  width:100%;
  height: 307rpx;
  vertical-align:bottom;
}
.mask{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.7)
}
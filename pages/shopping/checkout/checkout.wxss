@import "order.wxss";
page{
    height: 100%;
    background-color: #fff;
}
.container{
  margin: 20rpx;
  height: 100%;
}
.address-box{
    width: 100%;
}

.address-item{
    display: flex;
    justify-content: center;
    height: 110rpx;
    line-height: 110rpx;
    background: #fff;
    border-radius: 10rpx;
    border: 2px solid #ccc;
    align-items: center;
    padding: 5rpx 0;
    
}
.plus{
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  display: inline-block;
  border-radius: 50%;
  border: 2px solid #4A4A4A;
  color: #4A4A4A;
}
.address-item.address-empty{
  text-align: center;
}

.address-box .l{
    width: 155rpx;
    height: 100%;
  text-align: center
}

.address-box .l .name{
}

.address-box .l .default{
    margin-left: 6.25rpx;
    display: block;
    width: 62rpx;
    height: 33rpx;
    border-radius: 5rpx;
    border: 1px solid #b4282d;
    font-size: 20.5rpx;
    text-align: center;
    line-height: 29rpx;
    color: #b4282d;
}

.address-box .m{
    flex: 1;
    color: #4A4A4A;
}

.address-box .mobile{
    display: block;
    height: 29rpx;
    line-height: 29rpx;
    margin-bottom: 6.25rpx;
    font-size: 30rpx;
    color:#333;
}

.address-box .address{
    display: block;
    height: 37.5rpx;
    line-height: 37.5rpx;
    font-size: 25rpx;
    color:#666;
    width: 480rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap
}

.address-box .r{
    width: 77rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.address-box .r image{
    width: 52.078rpx;
    height: 52.078rpx;
}

.coupon-box{
    width: 100%;
    height: auto;
    overflow: hidden;
    background: #fff;
}

.coupon-box .coupon-item{
    width: 100%;
    height: 108.3rpx;
    overflow: hidden;
    background: #fff;
    display: flex;
    padding-left: 31.25rpx;
}

.coupon-box .l{
    flex: 1;
    height: 43rpx;
    line-height: 43rpx;
    padding-top: 35rpx;
}

.coupon-box .l .name{
    float: left;
    font-size: 30rpx;
    color: #666;
}

.coupon-box .l .txt{
    float: right;
    font-size: 30rpx;
    color: #666;
}

.coupon-box .r{
    margin-top: 15.5rpx;
    width: 100vw;
    height: 77rpx;
    /* display: flex;
    justify-content: center;
    align-items: center; */
}

.coupon-box .r image{
    width: 52.078rpx;
    height: 52.078rpx;
}

.order-box{
    margin-top: 20rpx;
    width: 100%;
    height: auto;
    overflow: hidden;
    background: #fff;
}

.order-box .order-item{
    height: 104.3rpx;
    overflow: hidden;
    background: #fff;
    display: flex;
    margin-left: 31.25rpx;
    padding-right: 31.25rpx;
    padding-top: 26rpx;
    border-bottom: 1px solid #d9d9d9;
}

.order-box .order-item .l{
    float: left;
    height: 52rpx;
    width: 50%;
    line-height: 52rpx;
    overflow: hidden;
}

.order-box .order-item .r{
    float: right;
    text-align: right;
    width: 50%;
    height: 52rpx;
    line-height: 52rpx;
    overflow: hidden;
}

.order-box .order-item.no-border{
    border-bottom: none;
}

.order-total{
    position: fixed;
    left:0;
    bottom: 0;
    height: 96rpx;
    width: 100%;
    display: flex;
    z-index: 1
}

.order-total .l{
    flex: 1;
    height: 100rpx;
    line-height: 100rpx;
    background: #fff;
    font-size: 36rpx;
    padding-left: 25rpx;
}

.order-total .r{
    width: 100vw;
    height: 100rpx;
    background: #000;
    line-height: 100rpx;
    text-align: center;
    color: #fff;
    font-size: 28rpx;
    margin-top:6rpx;
}

.totalMoney view{
  padding: 20rpx;
  font-size: 22rpx;
}
.totalMoney .l{
  border-top: 1px solid #eaeaea;
  font-weight: 700;
  font-size: 26rpx;
}


.gift-title{
  color: #000;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
}
.gifts-items{
  width: 22%;
  height: 340rpx;
  float: left;
  margin-right: 20rpx;
  /* padding: 20rpx; */
}
.gifts-items .top{
  position: relative;
  border: 1rpx solid #eee;
  box-sizing: border-box;
}
.gifts-items .checkbox icon {
  position: absolute;
  top: 5rpx;
  left: 5rpx;
  content: '';
  width: 23rpx;
  height: 23rpx;
  background: #fff;
  border: 2rpx solid #ccc;
  border-radius: 4rpx;
  box-sizing: border-box;
}

.gifts-items .checkbox.checked icon:before {
  content: '';
  position: absolute;
  top: 10%;
  left: 10%;
  width: 80%;
  height: 80%;
  background: #000;
  border: none;
  border-radius: 4rpx;
}
.gifts-items .bottom{
  padding-top: 5px;
  text-align: center;
  font-size: 20rpx;
  /* border: 1px solid #000; */
}
.totalMoney{
 padding-bottom:120rpx;
}

.scroll-extra-gift {
  display: flex;
  min-height: 250rpx;
  padding-bottom: 10px;
  flex-wrap: nowrap;
}

.extra-gifts-item {
  flex: 0 0 130rpx;
  margin-right: 20rpx;
  position: relative;
}
.extra-gifts .scroll-extra-bg {
  background-color: rgba(221,221,221,.3);
}
.gift-desc{
  font-size: 24rpx;
  /* color: #666; */
  padding: 15rpx 0 0 10rpx;
}
.active-notice {
  margin-left: 5px;
  font-size: 24rpx;
}
.mask{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1;
  background: rgba(0,0,0,0.5);
}

.remind{
  padding: 15rpx;
  font-weight: 700;
  font-size: 24rpx;
}
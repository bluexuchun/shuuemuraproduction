  line-height: 100rpx;
} */

.card image {
  width: 60rpx;
  height: 60rpx;
  /* margin-left: 50rpx; */
  /* margin-bottom: 15rpx; */
  left: 130rpx;
  top: 50%;
  transform: translateY(-50%);
  position: absolute;
}
.card image:nth-of-type(2) {
  width: 60rpx;
  height: 60rpx;
  left: 200rpx;
  top: 50%;
  transform: translateY(-50%);
  position: absolute;
}
.goods-items .t .number {
  display: block;
  float: right;
  text-align: right;
  font-size: 30rpx;
  font-weight: 700;
}

.goods-items .m {
  overflow: hidden;
  font-size: 18rpx;
  width: 400rpx;
}

.goods-items .m view {
  margin-top: 14rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-items .b {
  overflow: hidden;
  font-size: 38rpx;
  /* position: absolute; */
  bottom: 0;
}

.gifts-items {
  padding: 36rpx 0 20rpx;
}

.gifts-items .item {
  border-radius: 8rpx;
  border-bottom: 0;
  margin-bottom: 20rpx;
}

.gifts-items .item.active {
  background-color: #e8e8e8;
}

.prompt {
  font-size: 22rpx;
  color: #9b9b9b;
}
